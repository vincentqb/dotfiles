#!/bin/bash

BIN_DIR="$HOME/bin/"

mkdir -p $BIN_DIR
export PATH=$BIN_DIR:$PATH

# PyPI dotfiles

pip install --user dotfiles

# Neovim
# Check :help nvim-from-vim

if [ $1 = "mac" ]; then
	# MacOS
	wget https://github.com/neovim/neovim/releases/download/stable/nvim-macos.tar.gz
	tar xzvf nvim-macos.tar.gz

	mv ./nvim-osx64/bin/nvim $BIN_DIR/nvim
else
	# Linux
	wget https://github.com/neovim/neovim/releases/download/stable/nvim.appimage -O $BIN_DIR/nvim
	chmod u+x $BIN_DIR/nvim
fi

# curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

pip install --user black pylint flake8 isort neovim

# Fix copy-paste in MacOS
brew install reattach-to-user-namespace

# Update tpm

~/.tmux/plugins/tpm/bin/clean_plugins
~/.tmux/plugins/tpm/bin/install_plugins
~/.tmux/plugins/tpm/bin/update_plugins all

# Update vim

vim +'PlugUpgrade --sync' +qa
vim +'PlugClean --sync' +qa
vim +'PlugUpdate --sync' +qa

# Update zsh

zgen selfupdate
zgen update
zgen reset
