Host *
    # Keep connection alive longer
    TcpKeepAlive yes
    ServerAliveInterval 30
    ServerAliveCountMax 120
    # Tunnel all connections through first opened
    ControlMaster auto
    # ControlPath ~/.ssh/control:%h:%p:%r
    ControlPath ~/.ssh/control:%C

