[user]
    name = Vincent Quenneville-Belair
    email = vincentqb@gmail.com
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[credential]
    helper = cache --timeout=31536000
[difftool]
    tool = nvim
    prompt = false
[diff]
    tool = nvim
    word-diff = color
    colorMoved = default
[difftool "nvim"]
    cmd = "nvim -Rd \"$LOCAL\" \"$REMOTE\""
[mergetool "nvim"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    line-numbers = true
    side-by-side = true
    show-syntax-themes = true
    features = decorations
    syntax-theme = Dracula
[delta "decorations"]
    commit-style = raw
    file-style = omit
    hunk-header-style = file line-number syntax
[merge]
    tool = nvimdiff
    conflictstyle = diff3
[mergetool "nvimdiff"]
    # https://www.reddit.com/r/neovim/comments/qatokl/using_nvim_as_mergetool_with_vimfugitive/
    # https://gist.github.com/dteoh/ef407dd059125731d4afde33e05a232f
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
    default = simple
[pager]
    branch = false
    log = true
[url "https://github.com/"]
    insteadOf = git://github.com/
[color]
	ui = true
	diff = always
[core]
	pager = "(printf '\n\n'; cat) | less -FMRiX"
#  pager = "(printf '\n\n'; cat) | delta"
[alias]
    snatus = status -uno
    dog = log -20 --graph --abbrev-commit --decorate --date-order --color=always --color-words
    wiff = diff --color-words
    flame = blame --show-email --color-lines --color-by-age --date=relative --abbrev=6
[format]
    # https://draculatheme.com/contribute
    pretty="%C(reset)%C(blue)%h%C(reset) %C(cyan)(%cr)%C(reset)%C(white) %s%C(reset)%C(#44475a) %ae%C(reset)%C(auto)%d%C(reset)"

# Dracula Dark Theme
# https://github.com/dracula/git/blob/master/config/gitconfig
[color "branch"]
  current = cyan bold reverse
  local = white
  plain =
  remote = cyan
[color "diff"]
  commit =
  func = cyan
  plain =
  whitespace = magenta reverse
  meta = yellow
  # frag = cyan bold reverse
  frag = magenta
  old = red
  new = green
[color "grep"]
  context =
  filename =
  function =
  linenumber = white
  match =
  selected =
  separator =
[color "interactive"]
  error =
  header =
  help =
  prompt =
[color "status"]
  added = green
  changed = yellow
  header =
  localBranch =
  nobranch =
  remoteBranch = cyan bold
  unmerged = magenta bold reverse
  untracked = red
  updated = green bold
[status]
	short = true
[pull]
	rebase = true
