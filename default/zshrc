export PATH="$(yarn global bin):$PATH"

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/vincent/miniconda/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/vincent/miniconda/etc/profile.d/conda.sh" ]; then
        . "/home/vincent/miniconda/etc/profile.d/conda.sh"
    else
        export PATH="/home/vincent/miniconda/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

